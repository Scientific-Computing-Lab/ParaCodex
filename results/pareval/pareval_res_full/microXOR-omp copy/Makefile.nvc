NVCC = nvc++ -cuda -std=c++17 -O3
INCLUDES = -Iinclude -I/root/codex_baseline/cuda_omp_pareval_workdir_full/gate_sdk

SRCS = main.cpp microXOR.cpp
TARGET = microXOR.exe

all: $(TARGET)

$(TARGET): $(SRCS)
	$(NVCC) $(INCLUDES) $(SRCS) -o $(TARGET) -lcudart

clean:
	rm -f $(TARGET) *.o

run: $(TARGET)
	./$(TARGET) 1024 32
