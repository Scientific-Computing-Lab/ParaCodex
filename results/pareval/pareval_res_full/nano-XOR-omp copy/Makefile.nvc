NVCC = nvc++ -std=c++17 -O3 -mp=gpu -fopenmp
INCLUDES = -I/root/codex_baseline/cuda_omp_pareval_workdir_full/gate_sdk

SRCS = nanoXOR.cpp
TARGET = nanoXOR.exe

all: $(TARGET)

$(TARGET): $(SRCS)
	$(NVCC) $(INCLUDES) $(SRCS) -o $(TARGET)

clean:
	rm -f $(TARGET) *.o

run: $(TARGET)
	OMP_TARGET_OFFLOAD=MANDATORY ./$(TARGET) 1024 32
