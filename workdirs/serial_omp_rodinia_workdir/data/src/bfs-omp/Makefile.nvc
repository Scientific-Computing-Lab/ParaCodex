#===============================================================================
# User Options
#===============================================================================

# Compiler can be set below, or via environment variable
CC        = nvc++
OPTIMIZE  = yes
DEBUG     = no
DEVICE    = gpu
SM        = cc70
LAUNCHER  =
GATE_ROOT ?= /root/codex_baseline/serial_omp_rodinia_workdir
REF_DIR   ?= $(GATE_ROOT)/golden_labels/src/bfs-omp
REF_BIN   ?= $(REF_DIR)/main
REF_MAKE  ?= Makefile.nvc

RUN_ARGS ?= 4 input/graph1MW_6.txt

#===============================================================================
# Program name & source code list
#===============================================================================

program = main

source = src/bfs.c

obj = $(source:.c=.o)

#===============================================================================
# Sets Flags
#===============================================================================

# Standard Flags
CFLAGS := $(EXTRA_CFLAGS) -std=c99 -Wall -I$(GATE_ROOT)/gate_sdk

# Linker Flags
LDFLAGS = 

# Debug Flags
ifeq ($(DEBUG),yes)
  CFLAGS += -g
  LDFLAGS  += -g
endif

# Optimization Flags
ifeq ($(OPTIMIZE),yes)
  CFLAGS += -O3
endif

ifeq ($(DEVICE),gpu)
  CFLAGS +=-Minfo -mp=gpu -gpu=$(SM)
else
  CFLAGS +=-mp
endif

#===============================================================================
# Targets to Build
#===============================================================================

$(program): $(obj)
	$(CC) $(CFLAGS) $(obj) -o $@ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(program) $(obj)

run: $(program)
	$(LAUNCHER) ./$(program) $(RUN_ARGS)

.PHONY: ref_build
ref_build:
	$(MAKE) -C $(REF_DIR) -f $(REF_MAKE) clean
	$(MAKE) -C $(REF_DIR) -f $(REF_MAKE) \
	    CC="$(CC)" OPTIMIZE="$(OPTIMIZE)" DEBUG="$(DEBUG)" DEVICE="$(DEVICE)" SM="$(SM)" \
	    CFLAGS="$(CFLAGS) -I$(GATE_ROOT)/gate_sdk"

.PHONY: check-correctness
check-correctness: $(program) ref_build
	OMP_TARGET_OFFLOAD=MANDATORY \
	python3 $(GATE_ROOT)/gate_sdk/scripts/gate_harness.py $(REF_BIN) ./$(program) $(RUN_ARGS)

