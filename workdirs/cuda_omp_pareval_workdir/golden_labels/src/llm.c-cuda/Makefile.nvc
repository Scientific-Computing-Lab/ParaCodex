#===============================================================================
# User Options
#===============================================================================

# Compiler can be set below, or via environment variable
CC        = nvcc
OPTIMIZE  = yes
DEBUG     = no
DEVICE    = gpu
SM        = 89
LAUNCHER  =
GATE_ROOT ?= /root/codex_baseline/cuda_omp_pareval_workdir
REF_DIR   ?= $(GATE_ROOT)/data/src/llm.c-omp
REF_BIN   ?= $(REF_DIR)/train_gpt2fp32cu
REF_MAKE  ?= Makefile.nvc

RUN_ARGS ?=

#===============================================================================
# Program name & source code list
#===============================================================================

program = train_gpt2fp32cu test_gpt2fp32cu

source_train = train_gpt2_fp32.cu
source_test = test_gpt2_fp32.cu

obj_train = $(source_train:.cu=.o)
obj_test = $(source_test:.cu=.o)

#===============================================================================
# Sets Flags
#===============================================================================

# Standard Flags
CFLAGS := $(EXTRA_CFLAGS) -std=c++17 -O3 --use_fast_math -I$(GATE_ROOT)/gate_sdk

# Linker Flags
LDFLAGS = -lcublas -lcublasLt -lnvidia-ml

# Debug Flags
ifeq ($(DEBUG),yes)
  CFLAGS += -g -G
  LDFLAGS  += -g -G
endif

# Optimization Flags
ifeq ($(OPTIMIZE),yes)
  CFLAGS += -O3
endif

#===============================================================================
# Targets to Build
#===============================================================================

train_gpt2fp32cu: $(obj_train)
	$(CC) $(CFLAGS) $(obj_train) -o $@ $(LDFLAGS)

test_gpt2fp32cu: $(obj_test)
	$(CC) $(CFLAGS) $(obj_test) -o $@ $(LDFLAGS)

%.o: %.cu
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(program) $(obj_train) $(obj_test)

run: train_gpt2fp32cu
	$(LAUNCHER) ./train_gpt2fp32cu $(RUN_ARGS)

.PHONY: ref_build
ref_build:
	$(MAKE) -C $(REF_DIR) -f $(REF_MAKE) clean
	$(MAKE) -C $(REF_DIR) -f $(REF_MAKE) \
	    CC="$(CC)" OPTIMIZE="$(OPTIMIZE)" DEBUG="$(DEBUG)" DEVICE="$(DEVICE)" SM="$(SM)" \
	    CFLAGS="$(CFLAGS) -I$(GATE_ROOT)/gate_sdk"

.PHONY: check-correctness
check-correctness: train_gpt2fp32cu ref_build
	OMP_TARGET_OFFLOAD=MANDATORY \
	python3 $(GATE_ROOT)/gate_sdk/scripts/gate_harness.py $(REF_BIN) ./train_gpt2fp32cu $(RUN_ARGS)


